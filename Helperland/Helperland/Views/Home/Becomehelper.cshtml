
@{
    ViewData["Title"] = "Becomehelper";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Helperland | Become a Service Provider</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/5602f8a8c9.js" crossorigin="anonymous"></script>


</head>
<body>

    <!-- nav starts -->
    <nav id="homenav" class="navbar navbar-expand-lg">

        <a class="navbar-brand ms-3" asp-action="Index"><img src="/img/white-logo-transparent-background.png" id="mylogo" alt=""></a>
        <button style="color:white; margin-right: 15px;" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" onclick="changeColor()" id="nav-btn">
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto me-2">
                <li class="nav-item">
                    <a class="nav-link active rounded-pill nav-padding" aria-current="page" href="#">Book a Cleaner</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Prices">Prices</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">Our Guarantee</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">Blog</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link rounded-pill " href="#" role="button" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link rounded-pill px-3" href="#">Become a Helper</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img style="vertical-align: baseline;" src="/img/ic-flag.png" alt="">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#"><img src="/img/ic-flag.png" alt=""> <span>India</span> </a></li>
                        <li><a class="dropdown-item" href="#"><img src="/img/ic-flag.png" alt=""> <span>U.K.</span> </a></li>
                        <li><a class="dropdown-item" href="#"><img src="/img/ic-flag.png" alt=""> <span>U.S.A.</span> </a></li>
                    </ul>
                </li>
            </ul>

        </div>
    </nav>
    <!-- nav ends -->
    <!-- main stats -->
    <main>
        <!-- header section starts -->
        <section id="becomeProviderheader">
            <!-- form starts -->
            <div id="becomeProviderForm">
                <div id="becomeProviderRegister">
                    <h2>Register Now!</h2>
                    <form action="">
                        <input type="text" name="fname" placeholder="First name">
                        <input type="text" name="lname" placeholder="Last name">
                        <input type="text" name="email" placeholder="Email Address">
                        <div>
                            <span id="ctrcode">+49</span><input type="text" name="mobile" id="providerRegistrationMobile" placeholder="Mobile number">
                        </div>
                        <input type="text" name="email" id="email" placeholder="Email address">
                        <input type="password" name="password" placeholder="Password">
                        <input type="password" name="cpassword" placeholder="Confirm Password">
                        <div class="providerRegistrationCheckbox">
                            <input type="checkbox" name="newsletter" id="providerRegistrationnews">
                            <label for="newsletter">Send me newsletter from Helperland</label>
                        </div>
                        <div class="providerRegistrationCheckbox">
                            <input type="checkbox" name="t&c" id="providerRegistrationtandc">
                            <label for="t&c">I accept <a href="">Terms and conditions</a> & <a href="">privacy policy</a></label>
                        </div>

                        <div id="providerRegistration-submit"><button type="submit" id="providerRegistration-btn">Get Started <img src="/img/becomeProvider/arrow-white.png" alt=""></button></div>

                    </form>
                </div>
            </div>
            <!-- form ends -->

            <div class="text-center" id="providerRegistrationDownArrow">
                <a href=""><img src="/img/group-18_5.png" alt=""></a>
            </div>

        </section>
        <!-- header section ends -->
        <!-- how it work starts -->
        <section id="howIT">
            <h2>How it works</h2>
            <img src="/img/blog-left-bg.png" id="howIT-bg-left" alt="">
            <img src="/img/blog-right-bg.png" id="howIT-bg-right" alt="">

            <div id="howItWorks">
                <div class="howWork">
                    <div class="howWork-desc">
                        <h3>Register yourself</h3>
                        <p>Provide your basic information to register yourself as a service provider.</p>

                        <a href="">Read more <img src="/img/rightArrow.png" alt=""></a>
                    </div>
                    <div>
                        <img src="/img/becomeProvider/registerYourself.jpg" alt="" class="howWork-img">
                    </div>

                </div>
                <div class="howWork">
                    <div>
                        <img src="/img/becomeProvider/getService.jpg" alt="" class="howWork-img">
                    </div>
                    <div class="howWork-desc">
                        <h3>Get service requests</h3>
                        <p>You will get service requests from customes depend on service area and profile.</p>

                        <a href="">Read more <img src="/img/rightArrow.png" alt=""></a>
                    </div>
                </div>
                <div class="howWork">
                    <div class="howWork-desc">
                        <h3>Complete service</h3>
                        <p>Accept service requests from your customers and complete your work.</p>

                        <a href="">Read more <img src="/img/rightArrow.png" alt=""></a>
                    </div>
                    <div>
                        <img src="/img/becomeProvider/completeService.jpg" alt="" class="howWork-img">
                    </div>

                </div>
            </div>

            <section id="contact-news">
                <!-- newsletter starts -->
                <div class="text-center" id="news">
                    <h4 class="">GET OUR NEWSLETTER</h4>
                    <form action="">
                        <input type="text" name="email" placeholder="YOUR EMAIL" class="rounded-pill email">
                        <input type="submit" name="submit" class="rounded-pill submit-btn">
                    </form>

                </div>
                <!-- newsletter ends -->
            </section>

        </section>
        <!-- how it work ends -->



    </main>
    <!-- main ends -->
    <!-- footer starts -->
    @await Html.PartialAsync("Footer")
    <!-- footer ends -->

    @await Html.PartialAsync("MyModals")

    <script>

        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 50) {
                document.getElementById("mylogo").style.width = "75px";
                document.getElementById("mylogo").style.height = "55px";
                document.getElementById("homenav").style.backgroundColor = "#525252";
            } else {
                document.getElementById("mylogo").style.width = "156px";
                document.getElementById("mylogo").style.height = "120px";
                document.getElementById("homenav").style.backgroundColor = "#52525200";
            }
        }

    </script>

    <script>
        function changeColor() {
            if (document.getElementById("homenav").classList.contains('bgColorNav'))
                document.getElementById("homenav").classList.remove("bgColorNav");
            else
                document.getElementById("homenav").classList.add("bgColorNav");
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
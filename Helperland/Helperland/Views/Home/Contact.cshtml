@model Helperland.Models.ContactU
@{
    ViewData["Title"] = "Contact";
   
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Helperland | Contact</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

   

</head>
<body>
    <!-- nav starts -->
    @await Html.PartialAsync("FaqNav")
    <!-- nav ends -->
    <!-- header starts -->
    <header>
        <!-- banner -->
        <img src="/img/contact/contact-banner.png" id="banner" alt="">

        <!-- title -->
        <div class="text-center">
            <h1 class="title">Contact us</h1>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <hr>
            <div class="text-center separator" style="display: inline;">
                <img src="/img/faq/separator.png" alt="">
            </div>
            <hr>
        </div>
        <!-- title ends -->
    </header>
    <!-- header ends -->
    <!-- main starts -->
    <main>

        <section id="details">
            <!-- details starts -->
            <div class="d-flex flex-wrap justify-content-center justify-content-md-evenly">
                <!-- location starts -->
                <div class="d-flex flex-column align-items-center contact-details">
                    <div class="contact-img">
                        <img src="/img/contact/location_img.png" alt="">
                    </div>
                    <div class="contact-desc">
                        <p>1111 Lorem ipsum text 100,</p>
                        <p>Lorem ipsum AB</p>
                    </div>
                </div>
                <!-- location ends -->
                <!-- phone starts -->
                <div class="d-flex flex-column align-items-center contact-details">
                    <div class="contact-img">
                        <img src="/img/contact/phone-call.png" alt="">
                    </div>
                    <div class="contact-desc">
                        <p>+49 (40) 123 56 7890</p>
                        <p>+49 (40) 987 56 0000</p>
                    </div>

                </div>
                <!-- phone ends -->
                <!-- mail starts -->
                <div class="d-flex flex-column align-items-center contact-details">
                    <div class="contact-img">
                        <img src="/img/contact/vector-smart-object.png" alt="">
                    </div>
                    <div class="contact-desc">
                        <p>info@helperland.com</p>
                    </div>

                </div>
                <!-- mail ends -->
            </div>
            <!-- details ends -->
        </section>
        <div class="hrtag"><hr class="contact-divider"></div>

        <!-- contact form starts -->
        <section id="contact-form">
            <h2>Get in touch with us</h2>
            <!-- form starts -->

            <!--<div class="alert alert-danger d-none mt-3" id="contactusAlert" role="alert">
            </div>
            -->
            <form asp-action="Contact" method="post" enctype="multipart/form-data">
                <div id="form-elements">
                    <div>
                        <input type="text" asp-for="FirstName" id="fname" placeholder="First name" required>

                        <input type="text" asp-for="LastName" id="lname" placeholder="Last name" required>
                    </div>
                    <div>
                        <span id="countrycode">+49</span><input type="number" asp-for="PhoneNumber" id="mobile" placeholder="Mobile number" required>
                        <input type="text" asp-for="Email" id="email" placeholder="Email address" pattern="[a-z0-9._%+-]+@("@")[a-z0-9.-]+\.[a-z]{2,}$" required>
                    </div>
                    <div>
                        <select asp-for="Subject" id="subject" required>
                            <option value="1">General</option>
                            <option value="2">other</option>
                        </select>
                    </div>
                    <div>
                        <textarea id="contact-msg" asp-for="Message" cols="30" rows="5" placeholder="Message" required></textarea>
                    </div>

                    <div id="upload-div">
                        <p>Attachment</p>
                        <input type="file" asp-for="Attach" id="attachment">
                        <label for="attachment" id="labelattach">Upload</label>
                        <span id="filename"></span>
                    </div>

                    <div id="contactbtn-div"><button type="submit" id="contact-btn">Submit</button></div>

                </div>
            </form>
            <!-- form ends -->
        </section>
        <!-- contact form ends -->
        <!-- map starts -->
        <section id="map">
        </section>
        <!-- map ends -->

        <section id="contact-news">
            <!-- newsletter starts -->
            <div class="text-center" id="news">
                <h4 class="">GET OUR NEWSLETTER</h4>
                <form action="">
                    <input type="text" name="email" placeholder="YOUR EMAIL" class="rounded-pill email">
                    <input type="submit" name="submit" class="rounded-pill submit-btn">
                </form>

            </div>
            <!-- newsletter ends -->
        </section>

    </main>
    <!-- main ends -->
    <!-- footer starts -->
    @await Html.PartialAsync("Footer")
    <!-- footer ends -->

    @await Html.PartialAsync("MyModals")

    @await Html.PartialAsync("LoadingAnimation")
    <script>
        // Initialize and add the map
        function initMap() {
            // The location of Uluru
            const uluru = { lat: 23.0349, lng: 72.5004 };
            // The map, centered at Uluru
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 4,
                center: uluru,
            });
            // The marker, positioned at Uluru
            const marker = new google.maps.Marker({
                position: uluru,
                map: map,
            });
        }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDZW5iTEt-98ZQIS74_DfqScTc--AoFGgw &callback=initMap&libraries=&v=weekly"
            async></script>

    <script src="https://kit.fontawesome.com/5602f8a8c9.js" crossorigin="anonymous"></script>

    <script>
        // Initialize and add the map
        function initMap() {
            // The location of Tatvasoft
            const tatvasoft = { lat: 23.0349, lng: 72.5004 };
            // The map, centered at Tatvasoft
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 18,
                center: tatvasoft,
            });
            // The marker, positioned at Tatvasoft
            const image = "/img/contact/pin.png";
            const marker = new google.maps.Marker({
                position: tatvasoft,
                map: map,
                icon: image,
                title: "Tatvasoft",
            });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <script>
        $('#attachment').change(function () {
            var file = $('#attachment')[0].files[0].name;
            $('#filename').text(file);
        });


    </script>
</body>
</html>
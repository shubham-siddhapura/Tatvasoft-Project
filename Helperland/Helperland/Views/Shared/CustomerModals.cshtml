<div class="modal" tabindex="-1" id="mySettingAddAddressModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Address</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">

                    <div class="row">
                        <div class="col-lg-6">
                            <p>Street Name</p>
                            <input type="text" placeholder="Street Name" class="form-control">
                        </div>
                        <div class="col-lg-6">
                            <p>House number</p>
                            <input type="text" placeholder="House Number" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <p>Postal Code</p>
                            <input type="text" placeholder="Postal Code" class="form-control">
                        </div>
                        <div class="col-lg-6">
                            <p>City</p>
                            <input type="text" placeholder="City" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 ">
                            <p>Phone Number</p>
                            <div class="input-group">
                                <span class="input-group-text">+91</span>
                                <input type="text" placeholder="Mobile Number" class="form-control">
                            </div>

                        </div>

                    </div>

                    <button type="button" class="mySettingModalSubmitBtn">Add</button>
                </form>
            </div>

        </div>
    </div>
</div>



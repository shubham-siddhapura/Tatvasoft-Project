<form asp-controller="CustomerPage" asp-action="ValidPost" id="setupform" class="setupform">
    <div id="form1">
        <h4>Enter your postal code</h4>
        <input type="text" asp-for="PostalCode" id="postalCode" placeholder="Postal Code" value=@TempData["PostalCode"]>
        <span asp-validation-for="PostalCode" class="text-danger"></span>
        
        <button type="Submit">Check Availibility</button>
    </div>
</form>